#!/usr/bin/env stap

function timestamp:long() { return gettimeofday_us() - start }
function proc:string() { return sprintf("%d (%s)", pid(), execname()) }

global clones

probe syscall.clone {
  clones[pid()] ++
}

probe syscall.exit {
  printf("%d %s threads %d\n", timestamp(), proc(), clones[pid()])
}

